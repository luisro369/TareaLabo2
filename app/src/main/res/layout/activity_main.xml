<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.luisro00005513.tarealabo2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/yo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_id1"/>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/yo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_id2"/>

    </LinearLayout>


    <!--================ textviews ==============-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:padding="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text1"
            android:id="@+id/text_id1"
            />

        <TextView
            android:textAlignment="center"
            android:layout_weight="1"
            android:padding="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text2"
            android:id="@+id/text_id2"
            />
    </LinearLayout>
    <!--============ textviews (fin)=============-->



    <!--=============  caja contador==============-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/text_cont1"/>

    </LinearLayout>
    <!--=============  caja contador (fin)==========-->


    <!--=============  botones ===================-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button1"
            android:id="@+id/button_id1"
            />

        <Button
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button2"
            android:id="@+id/button_id2"
            />
    </LinearLayout>
    <!--================= botones (fin) ============-->

</LinearLayout>
